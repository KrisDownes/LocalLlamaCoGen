{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "out",
    "sourceMap": true,
    "rootDir": "src",
    "lib": ["ES6"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "types": ["node"]
  },
  "exclude": ["node_modules", ".vscode-test"]
}
